        </div>
    </div>

    <div class="form-group">
        @Html.Label("Opština rođenja", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.OpstinaRodjenja, new { htmlAttributes = new { @required = "true", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.OpstinaRodjenja, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Država rođenja", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.DrzavaRodjenja, new { htmlAttributes = new { @required = "true", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DrzavaRodjenja, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Broj u matičnoj knjizi", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.BrojUMatKnjizi, new { htmlAttributes = new { @required = "true", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.BrojUMatKnjizi, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Mesto boravka", htmlAttributes: new { @required = "true", @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.MestoBoravka, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MestoBoravka, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.Label("Adresa boravka", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.AdresaBoravka, new { htmlAttributes = new { @required = "true", @class = "form-control" } })
