@model DomSvilajnac.Models.Ucenik

@{
    ViewBag.Title = "Izmena učenika";
}

<h2>Izmena učenika @Model.Ime @Model.Prezime </h2>


@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "ucenikForma" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4></h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.Label("Ime učenika", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Ime, new { htmlAttributes = new { @class = "form-control", @required = "true" } })
            @Html.ValidationMessageFor(model => model.Ime, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Prezime učenika", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Prezime, new { htmlAttributes = new { @class = "form-control", @required = "true" } })
            @Html.ValidationMessageFor(model => model.Prezime, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("JMBG učenika", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.JMBG, new { htmlAttributes = new { @required="true", @class = "form-control", @maxlength = "13" } })
            @Html.ValidationMessageFor(model => model.JMBG, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Datum rođenja", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.DatumRodjenja, new { htmlAttributes = new { @required = "true", @class = "form-control", @placeholder = "Format: dd.mm.gggg.(npr. 21.03.1997.)" } })
            @Html.ValidationMessageFor(model => model.DatumRodjenja, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Datum upisa", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.DatumUpisa, new { htmlAttributes = new { @required = "true", @class = "form-control", @placeholder = "Format: dd.mm.gggg.(npr. 21.03.1997.)" } })
            @Html.ValidationMessageFor(model => model.DatumUpisa, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Nosilac starateljstva", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.LabelFor(model => model.NosilacStarateljstva, "Otac", new { @required = "true" })
            @Html.RadioButtonFor(model => model.NosilacStarateljstva, "Otac", new { @required = "true" })
            @Html.LabelFor(model => model.NosilacStarateljstva, "Majka", new { @required = "true" })
            @Html.RadioButtonFor(model => model.NosilacStarateljstva, "Majka", new { @required = "true" })
            @Html.LabelFor(model => model.NosilacStarateljstva, "Staratelj", new { @required = "true" })
            @Html.RadioButtonFor(model => model.NosilacStarateljstva, "Staratelj", new { @required = "true" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Ime staratelja", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.StarateljIme, new { htmlAttributes = new { @required = "true", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.StarateljIme, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Prezime staratelja", htmlAttributes: new { @class = "control-label col-md-2" })
