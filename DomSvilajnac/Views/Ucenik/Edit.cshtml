            @Html.ValidationMessageFor(model => model.StarateljPrezime, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Nivo obrazovanja staratelja", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.NivoObrazovanja, new { htmlAttributes = new { @required = "true", @class = "form-control", @placeholder = "Unesite broj od 1-8" } })
            @Html.ValidationMessageFor(model => model.NivoObrazovanja, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Mesto rođenja", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.MestoRodjenja, new { htmlAttributes = new { @required = "true", @class = "form-control" } })
